{
	"easycom": {
		"autoscan":true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/hot/hot",
			"style": {
				"navigationBarTitleText": "热门"
			}
		},
		{
			"path": "pages/hot-video/hot-video",
			"style": {
				"navigationBarTitleText": "热门视频"
			}
		},
		{

			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{

			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#777777",
		"selectedColor": "#333333",
		"list": [
			{
				"pagePath": "pages/hot/hot",
				"text": "热门",
				"iconPath": "static/images/tab-icons/hot.png",
				"selectedIconPath": "static/images/tab-icons/hot-active.png"
			},
			{
				"pagePath": "pages/hot-video/hot-video",
				"text": "热门视频",
				"iconPath": "static/images/tab-icons/hot-video.png",
				"selectedIconPath": "static/images/tab-icons/hot-video-active.png"
			},
			{
				"pagePath": "pages/my/my",
				"text": "我的",
				"iconPath": "static/images/tab-icons/my.png",
				"selectedIconPath": "static/images/tab-icons/my-active.png"
			}
		]
	},
	"subPackages": [
		{
			"root": "subpkg",
			"name":"sub-1",
			"pages": [
				{
					"path": "pages/search-blog/search-blog",
					"style":{
						"navigationBarTitleText": "文章搜索"
					}
				},
				{
					"path": "pages/blog-detail/blog-detail",
					"style":{
						"navigationBarTitleText": "文章详情",
						"enablePullDownRefresh": false
					}
				}
			]
		}
	]
}
